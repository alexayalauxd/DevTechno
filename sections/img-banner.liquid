<link rel="preload" href="{{ 'theme.css' | asset_url }}" as="style">

<div id="shopify-section-{{ section.id }}" class="shopify-section mb-5">
    <div class="page-width">
    
        {% if section.settings.section_title != blank %} 
        <h1>
            {{ section.settings.section_title | escape }}
        </h1>
        {% endif %}

        <div class="container">
            <div class="row">
                <!-- Columna textos-imagen -->
                <div class="col-md-4 p-0 co_1 ">
                    <!-- Whatsapp -->
                    <div>
                        <span>
                            {{ section.settings.section_text_1 }}
                        </span>
                    </div>
                    <hr>
                    <!-- Imagen Logo -->
                    <div>
                        <span>
                            <img src="{{ section.settings.image_card_1 | img_url: '750x' }}">
                        </span>
                    </div>
                    <!-- Texto -->
                    <div>
                        <span>
                            {{ section.settings.section_text_2 }}
                        </span>
                    </div>
                </div>
                <!-- Imagen -->
                <div class="col-md-8 p-0 ">
                    <img src="{{ section.settings.image_card_2 | img_url: '750x' }}">
                </div>
            </div>
        </div>

    </div>
</div>

{% schema %}
{
    "name": "img-banner",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Titulo de la sección",
            "default": "Titulo"
        },
        {
            "type": "text",
            "id": "section_text_1",
            "label": "Numero",
            "default": "Numero"
        },
        {
            "type":"image_picker",
            "id": "image_card_1",
            "label": "Imagen de la tarjeta"
        },
        {
            "type": "text",
            "id": "section_text_2",
            "label": "Texto de la sección",
            "default": "Texto"
        },
        {
            "type":"image_picker",
            "id": "image_card_2",
            "label": "Imagen de la tarjeta"
        }
    ],	
    "presets": [
        {
        "name": "img-banner",
        "category": "TECH"
    }
  ]
}
{% endschema %}