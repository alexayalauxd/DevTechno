    display:inline;
    font-family:Quicksand, sans-serif;
    font-size:18px;
    height:503.09px;
    letter-spacing:normal;
    margin-bottom:0px;
    margin-left:0px;
    margin-right:0px;
    margin-top:0px;
    max-width:100%;
    min-width:350px;
    object-fit:cover;
    text-align:center;
    text-size-adjust:100%;
    text-transform:none;
    vertical-align:middle;
    width:739.201px;
    -webkit-font-smoothing:antialiased;
    -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
  }

