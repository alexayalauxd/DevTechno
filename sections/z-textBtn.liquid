<link rel="preload" href="{{ 'style.css' | asset_url }}" as="style">

<style>
    .cardTex{
        border: none;
    }
    .titl{
        color:rgb(27, 27, 27);
        font-size:24px;
        font-weight:400;
        -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
        height: 30px;
        margin-bottom: 1em;
    }
    .tex{
        color:rgb(94, 94, 94);
        font-size:20px;
        font-style:normal;
        font-weight:300;
        margin-bottom: 1em;
        -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
    }
    .boton{
        background-color:rgb(0, 117, 193);
        font-size:16px;
        font-weight:700;
        margin-bottom: 1em;
    }
</style>

<div id="shopify-section-{{ section.id }}" class="shopify-section my-5">
