        <div class="cardTex text-center">

            <div class="card-body">
                <h5 class="card-title titl">{{ section.settings.title_1 }}</h5>
                <p class="card-text tex">{{ section.settings.text_1 }}</p>
                <a href="#" class="btn boton">SABER M√ÅS</a>
            </div>

        </div>
    </div>
</div>


